{
  "compilerOptions": {
    "rootDir": "api",
    "outDir": "dist",
    "baseUrl": "./api",
    "paths": {
      "#config/*": ["config/*"],
      "#controllers/*": ["controllers/*"],
      "#middlewares/*": ["middlewares/*"],
      "#models/*": ["models/*"],
      "#routes/*": ["routes/*"],
      "#schemas/*": ["schemas/*"],
      "#utils/*": ["utils/*"],
      "#interface/*": ["interface/*"]
    },
    "lib": ["es2020"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["api/**/*"],
  "exclude": ["dist", "node_modules"]
}
