{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "#config/*": ["config/*"],
      "#controllers/*": ["controllers/*"],
      "#middlewares/*": ["middlewares/*"],
      "#models/*": ["models/*"],
      "#routes/*": ["routes/*"],
      "#schemas/*": ["schemas/*"],
      "#utils/*": ["utils/*"],
      "#interface/*": ["interface/*"]
    },
    "lib": ["ES2022"], 
    "module": "nodenext",           
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "types": ["node"],                 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
